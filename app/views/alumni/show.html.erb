<h1>Alumnus Profile</h1>
<p><strong>UIN:</strong> <%= @alumnus.uin %></p>
<p><strong>Email:</strong> <%= @alumnus.email %></p>

<h2>Experiences</h2>

<% if @alumnus.experiences.any? %>
  <ul>
    <% @alumnus.experiences.each do |experience| %>
      <li>
        <strong><%= experience.title %> (<%= experience.experience_type %>)</strong>  
        <br>
        <small><%= experience.date_interval %></small>
        <br>
        <p><%= experience.description %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No experiences added yet.</p>
<% end %>

<h3>Claim an Experience</h3>
<%= form_with url: claim_experience_alumnus_path(@alumnus), method: :post do |f| %>
  <div>
    <%= f.label :experience_id, "Select an Experience" %>
    <%= f.collection_select :experience_id, Experience.where(recepient_uin: nil), :id, :title, prompt: "Choose an Experience" %>
  </div>
  <%= f.submit "Claim Experience" %>
<% end %>
